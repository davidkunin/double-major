<h1>로드맵</h1>
<div>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">제목</th>
      <th scope="col">작성시간</th>
    </tr>
  </thead>
  <tbody>
  <% i = 1 %>
  <% @all_school.each do |x| %>
      <tr onclick="window.location='/homes/show/<%=x.id%>';">
      <th scope="row"><%= i %></th>
      <td><%= x.title %></td>
      <td><%= x.created_at %></td>
    </tr>

    <% i += 1 %>
   <% end %>
  </tbody>
</table>

<a href='/homes/form/'><button type="button">[새글]</button></a>
<a href='/'><button type="button">[뒤로가기]</a>
</div>
